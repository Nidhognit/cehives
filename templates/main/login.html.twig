{% extends 'base.html.twig' %}

{% block title %}Логин{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <div class="text-center m-b-md">
                    <h3>Логин</h3>
                </div>
                <div class="hpanel">
                    <div class="panel-body">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div></div>
                        <br><br><br>
                        <div class="form-group">
                            {{ form_label(form._username) }}
                            {{ form_widget(form._username) }}
                            {{ form_errors(form._username) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form._password) }}
                            {{ form_widget(form._password) }}
                            {{ form_errors(form._password) }}
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Логин</button>
                        <a class="btn btn-default btn-block" href="{{ path('registration') }}">Регистрация</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
