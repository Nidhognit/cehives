{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <div class="text-center m-b-md">
                    <h3>{{'transaltion@registration.title'|trans}}</h3>
                    <small>{{'transaltion@registration.text'|trans}}</small>
                </div>
                <div class="hpanel">
                    <div class="panel-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username) }}
                            {{ form_errors(form.username) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword) }}
                            {{ form_widget(form.plainPassword) }}
                            {{ form_errors(form.plainPassword) }}
                        </div>
                        <button type="submit" class="btn btn-success btn-block">{{'transaltion@registration.btn'|trans}}</button>
                        <a class="btn btn-default btn-block" href="{{ path('login') }}">{{ 'transaltion@login.btn'|trans  }}</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
