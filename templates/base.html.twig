<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Cehevis - {% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('build/css/app.css') }}" rel="stylesheet"/>
    {% endblock %}
</head>
<body>
{% block returnHome %}
<a href="{{ path('homepage') }}" class="btn btn-info  btn-lg">
        <i class="fa fa-home"></i>
    </a>
{% endblock %}
{% block body %}{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/js/common.js') }}"></script>
{% endblock %}
{% block messages %}
    <div class="main-message-area">
        {% for message in app.flashes(constant('Cehevis\\Controller\\MainController::INFO')) %}
            <span class="alert-notice-message">{{ message }}</span>
        {% endfor %}
        {% for message in app.flashes(constant('Cehevis\\Controller\\MainController::ERROR')) %}
            <span class="alert-error-message">{{ message }}</span>
        {% endfor %}
        {% for message in app.flashes(constant('Cehevis\\Controller\\MainController::SUCCESS')) %}
            <span class="alert-success-message">{{ message }}</span>
        {% endfor %}
    </div>
{% endblock %}
{% block copyright %}
    <div class="row">
        <div class="col-md-12 text-center">
            <strong>{{'transaltion@company.name'|trans}}</strong> - {{'transaltion@company.title'|trans}} <br> 2019 Copyright
        </div>
    </div>
{% endblock %}
</body>
</html>
