{% extends 'base.html.twig' %}

{% block title %}Game list{% endblock %}
{% block body %}
    <h1>Все игры</h1>

    <h2>Песочницы</h2>
    <div class="col-lg-12">
        {{ form_start(form) }}
        <div class="form-group ">
            <div class="col-lg-4">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
                <button class="btn btn-default" type="submit">Начать новую</button>
            </div>
        </div>
    </div>

    {{ form_end(form) }}

    {% for game in gameList %}
        <br>
        <a href="{{ path('gameplay', {'id': game.id}) }}" class="btn btn-info btn-lg" data-game-id="{{ game.id }}">
            <span>Продолжить игру: {{ game.name }}</span>
        </a>
    {% endfor %}
{% endblock %}
